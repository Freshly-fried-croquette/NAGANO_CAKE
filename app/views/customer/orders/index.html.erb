<h2>注文履歴一覧</h2>
<table>
  <tr>
   <th>注文日</th>
   <th>配送先</th>
   <th>注文商品</th>
   <th>支払い金額</th>
   <th>ステータス</th>
   <th>注文詳細</th>
  </tr>
  <% @orders.each do |order|%>
  <tr>
   <td><%= order.created_at %></td>
   <td><%= order.customer.address %></td>
   <td><% order.order_details.each do |detail| %>
        <%= detail.product.name %>
       <% end %>
   </td>
   <td><%= order.amount_billed  %></td>
   <td><%= order.order_status %></td>
   <td><%= link_to "表示する" , customer_order_path(order)  %></td>
  </tr>
  <% end %>
</table>