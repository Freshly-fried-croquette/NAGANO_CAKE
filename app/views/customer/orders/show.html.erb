<div class="container">
  <h4>注文履歴詳細</h4>
    <div class="row">
      <div class="col">
        <table>
          注文情報
            <tr>
              <th>注文日</th>
                <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>

            <tr>
              <th>配送先</th>
              <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %> </td>
            </tr>

            <tr>
              <th>支払い方法</th>
                <td><%= @order.payment_method %></td>
    　　　　　　</tr>

            <tr>
              <th>ステータス</th>
                <td><%= @order.order_status %> </td>
              </tr>
        </table>
      </div>
      <div class="col">
            <p>請求情報</p>
            <table class="table table-bordered">
                <tr>
                    <th>商品合計</th>
                    <td><%= @order_details.price %></td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td><%= @order.postage %></td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td><%=@order.total_payment + @order.postage %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>注文内容<p>
            <table class="table table-bordered">
                <thead>
                    <th>商品</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                </thead>
                <% @item.each do |item| %>
                    <tbody>
                        <td><%= item.item.name %></td>
                        <td><%= item.tax_include_price %></td>
                        <td><%= item.amount %></td>
                        <td><%= item.s_total %></td>
                    </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>
