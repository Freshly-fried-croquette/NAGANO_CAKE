<div class = "container">
  <div clas = "row">
    <h3>マイページ</h3>
  </div>
  <div class = "row">
    <div class = "col-lg-7 mb-4">
        登録情報
        <%= link_to "編集する", edit_customer_current_customer_path, class: "btn btn-success ml-4" %>
    </div>
  </div>
  <div class = "row">
    <div class = " col-lg-8 mb-4">
      <table class = "table table-bordered">
        <tr>
          <th class = "table-hover">氏名</th>
          <th><%= @customer.last_name %><span>  </span><%= @customer.first_name %></th>
        </tr>
        <tr>
          <th class = "table-hover">カナ</th>
          <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th class = "table-hover">郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>
        <tr>
          <th class = "table-hover">住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th class = "table-hover">電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th class = "table-hover">メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-7 mb-3">
        配送先
        <%= link_to "一覧を見る", customer_delivery_addresses_path(@customer), class: "btn btn-primary ml-5", style: "width: 20%" %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-7 mb-3">
        注文履歴
        <%= link_to "一覧を見る", customer_orders_path(@customer), class: "btn btn-primary ml-4", style: "width: 20%" %>
    </div>
  </div>
</div>