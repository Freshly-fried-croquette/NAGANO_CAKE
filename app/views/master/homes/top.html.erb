<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5 ">
      <h3 class= "alert alert-info text-center">注文履歴一覧</h3>
    </div>
  </div>
  
  <div class="text-center">
    <div class="col-lg-12">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), master_order_path(order) %></td>
              <td><%= link_to "#{order.customer.last_name + order.customer.first_name}",master_customer_orders_path(order.customer.id) %></td>
              <% @product_count = 0 %>
              <%  order.order_details.each do |detail| %>
                <% @product_count += detail.product_count %>
              <% end %>
              <td><%= @product_count %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>