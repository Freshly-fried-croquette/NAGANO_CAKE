<h2>商品一覧</h2>
<table>
  <thead>
    <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜き価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <%= @products.each do |product| %>
    <tr>
     <td><%= product.id %></td>
     <td><%= link_to product.name, master_product_path(item) %></td>
     <td><%= product.price.to_s %></td>
     <td><%= product.genre.name %></td>
     <td class="<%= product.is_active_color %>"><%= product.is_active ? "販売中" : "販売停止中" %></td>
    </tr>
    <% end %>
  </tbody>
</table>