<div>
  <h3>ジャンル一覧・追加</h3>
</div>
<%= form_with model: @genre, url:master_genres_path do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録" %>
<% end %>
<table>
  <thead>
    <th>ジャンル</th>
    <th></th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_master_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>