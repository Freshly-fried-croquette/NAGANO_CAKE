<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5 ">
      <h3 class= "alert alert-info text-center">ジャンル一覧・追加</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-7 mb-4">
      <%= form_with model: @genre, url:master_genres_path do |f| %>
        <%= f.label :name, "ジャンル名", class: 'ml-5' %>
        <%= f.text_field :name, class: 'ml-5' %>
        <%= f.submit "新規登録", class:"btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-5">
      <table class="table">
        <thead class="thead-light">
          <th class="text-center">ジャンル</th>
          <th></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-center"><%= genre.name %></td>
              <td class="text-right"><%= link_to "編集する", edit_master_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>