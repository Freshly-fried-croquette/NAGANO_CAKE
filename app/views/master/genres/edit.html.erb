<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5 ">
      <h3 class= "alert alert-info text-center">ジャンル編集</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-7 mb-4">
      <%= form_with model: @genre, url:master_genre_path do |f| %>
        <%= f.label :name, "ジャンル名", class: 'ml-5' %>
        <%= f.text_field :name, class: 'ml-5' %>
        <%= f.submit "変更を保存", class:"btn btn-success ml-5" %>
        <%= link_to "削除", master_genre_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger ml-3" %>
      <% end %>
    </div>
  </div>
</div>