<h2>注文履歴詳細</h2>
<table>
<tr>
<td>購入者</td>
<td><%= @order.customer.last_name%><%= @order.customer.first_name %></td>
</tr>
<tr>
<td>注文日</td>
<td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
</tr>
<tr>
<td>配送先</td>
<td><%= @order.address %></td>
</tr>
<tr>
<td>支払い方法</td>
<td><%= @order.payment_method %></td>
</tr>
<tr>
<td>注文ステータス</td>
<td>
  <%= form_with model: @order, url: master_order_path, method: :patch, local: true do |f| %>
  <%= f.select :order_status,Order.order_statuses.keys %>
  <%= f.submit "更新" , class: "btn btn-success" %>
  <% end %>
</td>
</tr>
</table>
<table>
  <thead>
  <tr>
  <th>
    商品名
  </th>
  <th>
    単価（税込）
  </th>
  <th>
    数量
  </th>
  <th>
    小計
  </th>
  <th>
    制作ステータス
  </th>
  <th>

  </th>
  </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_details| %>
    <tr>
     <td>
       <%= order_details.product.name %>
     </td>
     <td>
       <%= (order_details.price*1.1).round %>
     </td>
     <td>
        <%= order_details.quantity %>
     </td>
     <td>
         <%= ((order_details.price)*(order_details.quantity)*1.1).round %>
     </td>
     <td>
       <div>
         <%= form_with model: order_details, url: master_order_path , method: :patch,local: true do |f| %>
         <%= f.select :make_status,OrderDetail.make_statuses.keys %>
         <%= f.submit "更新"  , class: "btn btn-success"%>
         <% end %>
       </div>
     </td>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <tr>
    <th>
      商品合計
    </th>
    <td>

    </td>
  </tr>
  <tr>
    <th>
      送料
    </th>
    <td>
      800円
    </td>
  </tr>
  <tr>
    <th>
      請求金額合計
    </th>
    <td>
        <%= @order.amount_billed %>円
    </td>
  </tr>
</table>