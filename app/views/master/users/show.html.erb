<div class = "container">

  <div clas = "row">
    <div class = "col-log-4 offset-lg-1 mb-3">
      <h3><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-7 mb-4">
      <table class = "table table-bordered">

        <tr>
          <td class="table-active">会員ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td class="table-active">氏名</td>
          <td>
            <%= @user.last_name %>
            <%= @user.first_name %>
          </td>
        </tr>

        <tr>
          <td class="table-active">フリガナ</td>
          <td>
            <%= @user.last_name_kana %>
            <%= @user.first_name_kana %>
          </td>
        </tr>

        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @user.post_code %></td>
        </tr>

        <tr>
          <td class="table-active">住所</td>
          <td><%= @user.address %></td>
        </tr>

        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @user.phone_number %></td>
        </tr>

        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td class="table-active">会員ステータス</td>
          <td><%= @user.deleted_user ? "有効" : "退会" %></td>
        </tr>

        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_master_user_path(@user), class: "btn btn-success mr-5" %>
            <%= link_to "注文履歴一覧を見る", master_root_path, class: "btn btn-primary ml-5" %>
          </td>
        </tr>

      </table>
    </div>
  </div>

</div>