<div>
  <h3>商品新規登録</h3>
</div>
<%= form_with model: @product, url: master_products_path, method: :product do |f| %>

  <%= f.label :name, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
  
  <%= f.label :name, "商品説明" %>
  <%= f.text_area :description %>
  
  <%= f.label :name, "ジャンル" %>
  <%= f.collection_select :genres_id, @genres, :id, :name, {include_blank: "--選択してください--"} %>
  
  <%= f.label :name, "税抜価格" %>
  <%= f.text_field :price %>円
  
  <%= f.label :namme, "販売ステータス" %>
  <%= f.radio_button :sale_status, "true" %>販売中
  <%= f.radio_button :sale_status, "false" %>販売停止中
  
  <%= f.submit '新規投稿' %>
<% end %>